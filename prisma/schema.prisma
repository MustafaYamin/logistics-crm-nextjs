generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-1.0.x", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  agents       Agent[]
  roles        UserRole[]
}

model UserRole {
  id     Int   @id @default(autoincrement())
  role   Role
  user   User  @relation(fields: [userId], references: [id])
  userId Int
}

enum Role {
  ADMIN
  CLIENT
}

model Agent {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  company   String?
  address   String?
  city      String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  // âœ… Composite unique constraint (email + userId)
  @@unique([userId, email])
}

model EmailTemplate {
  id          Int      @id @default(autoincrement())
  name        String
  subject     String
  htmlContent String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FreightQuery {
  id                  Int      @id @default(autoincrement())
  origin              String
  destination         String
  cargoType           String
  weight              String
  dimensions          String
  pickupDate          String // Keeping as string to match current API, usually DateTime is better
  deliveryDate        String
  specialRequirements String?  @db.Text
  createdAt           DateTime @default(now())
}

model EmailStatus {
  id        Int      @id @default(autoincrement())
  agentName String
  email     String
  status    String   // pending, sent, delivered, etc.
  sentAt    DateTime?
  openedAt  DateTime?
  repliedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}